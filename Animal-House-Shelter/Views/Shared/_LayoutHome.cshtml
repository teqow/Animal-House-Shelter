
<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/css/style.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <span class="navbar-brand h1"><a asp-controller="Home" asp-action="Index">Animal House Shelter</a></span>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-controller="Dogs" asp-action="List">Dogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-controller="Cats" asp-action="List">Cats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-controller="Contact" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-controller="Volunteer" asp-action="Index">Volunteer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-controller="Donate" asp-action="Index">Donate</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <section class="my-section-jumbotron">
        <div class="jumbotron jumbotron-fluid my-jumbotron d-flex align-items-center">
            <div class="container text-center ">
                <h1 class="display-4 text-uppercase my-jumbotron-text my-4">Finding Forever Homes for Dogs and Cats</h1>
                <h3 class="text-white">Animal House Shelter is a no-kill shelter that rescues and cares for homeless pets.</h3>
                <input type="button" class="btn button1 btn-lg btn-warning my-2" value="Find my Dog!" onclick="window.location = '@Url.Action("List", "Dogs")'" />
                <h4 class="text-white">Or</h4>
                <input type="button" class="btn button1 btn-lg btn-warning my-2" value="Find my Cat!" onclick="window.location = '@Url.Action("List", "Cats")'" />
            </div>
        </div>
    </section>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

</body>
</html>